<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_draw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/first_viewpager2"
            android:layout_width="match_parent"
            android:layout_height="668dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp">

        </androidx.viewpager2.widget.ViewPager2>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/First_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@drawable/all"
            app:menu="@menu/menu"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="667dp">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/first_navigation_view"
        android:layout_gravity="left"
        app:headerLayout="@layout/navigation_view_head"
        android:layout_width="324dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        app:menu="@menu/menu2"
        >

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>