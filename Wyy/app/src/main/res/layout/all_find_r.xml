<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/songList_number_textView"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="TextView"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="283dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/songList_name_textView2"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TextView" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="17dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        app:srcCompat="@drawable/song_author" />

    <TextView
        android:id="@+id/songList_author_textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="6"
        android:text="TextView" />
</LinearLayout>


        </LinearLayout>


        <RadioButton
            android:id="@+id/songList_radioButton"
            android:layout_width="25dp"
            android:layout_height="23dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/songlist1"
            android:button="@null"
            android:text=" " />

        <RadioButton
            android:id="@+id/songList_radioButton2"
            android:layout_width="34dp"
            android:layout_height="29dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/songlist2"
            android:button="@null"
            android:text=" " />

    </LinearLayout>

</RelativeLayout>